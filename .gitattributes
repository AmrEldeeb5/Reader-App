# Enforce consistent line endings
* text=auto

# Kotlin / Gradle always LF
env*        text eol=lf
*.kt        text eol=lf
*.kts       text eol=lf
*.toml      text eol=lf
*.gradle    text eol=lf
*.properties text eol=lf
*.md        text eol=lf
*.xml       text eol=lf
*.json      text eol=lf
*.yml       text eol=lf
*.yaml      text eol=lf
*.pro       text eol=lf

# Shell / scripts
*.sh        text eol=lf

# Batch stays CRLF (Windows helpers)
*.bat       text eol=crlf

# Images / binaries (no EOL normalization)
*.png       binary
*.webp      binary
*.jar       binary
*.keystore  binary

